<h1>Books in our DB:</h1>

{{#each books}}
    <section class="book-summary">
        <h2>{{this.title}}</h2>
        <p>
            Author: {{this.author}} <br />
            Rating: {{this.rating}} <br />
            <a href="/books/{{_id}}">More details</a>
            <a href="/books/{{_id}}/edit">Edit this book</a>

        </p>

    </section>
{{/each}}